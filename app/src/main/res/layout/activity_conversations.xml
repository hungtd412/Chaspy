<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80DEEA"
    tools:context=".ui.view.ConversationsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header section with blue background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Logo and App Name -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chaspy_logo"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:src="@drawable/chaspy_logo" />
            </LinearLayout>

            <!-- Search bar -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_search"
                        android:layout_marginStart="8dp"
                        app:tint="#757575" />

                    <EditText
                        android:id="@+id/search_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:hint="Search"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Main content section with curved top corners (increased radius) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_top_background">

            <!-- User list - RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_conversations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/nav_container"
                android:paddingTop="8dp"
                tools:listitem="@layout/conversation_item" />

            <!-- Container for the pill-shaped bottom navigation -->
            <FrameLayout
                android:id="@+id/nav_container"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="16dp">

                <!-- Pill-shaped navigation bar with elevation removed -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#E0F7FA">

                    <LinearLayout
                        android:id="@+id/bottom_navigation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="2">

                        <!-- Chats Button -->
                        <ImageButton
                            android:id="@+id/btn_chats"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@android:drawable/ic_dialog_email"
                            app:tint="#1976D2"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Chats" />

                        <!-- Settings Button -->
                        <ImageButton
                            android:id="@+id/btn_settings"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@android:drawable/ic_menu_manage"
                            app:tint="#757575"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Settings" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>